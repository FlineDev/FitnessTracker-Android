<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
    <color name="primary">#6ab7ff</color>
    <color name="primaryVariant">#1E88E5</color>

    <!--colorSecondary colors are most often used as accents on components, such as FABs and selection controls.-->
    <color name="secondary">#ffbd45</color>
    <color name="secondaryVariant">#fb8c00</color>

    <!--colorBackground appears behind scrollable content and is used for the default window background.-->
    <color name="background">#040506</color>

    <!--colorSurface is mapped to the surface of components such as cards, sheets and menus.-->
    <color name="surface">#141A1F</color>

    <!--colorError is used to indicate an error state for components such as text fields.-->
    <color name="error">#cf6679</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface on which they appear.-->
    <color name="onPrimary">#000000</color>
    <color name="onSecondary">#000000</color>
    <color name="onBackground">#ffffff</color>
    <color name="onSurface">#ffffff</color>
    <color name="onError">#000000</color>

    <!--"On" colors define how text, icons and strokes are colored in relation to the surface on which they appear.-->
    <color name="onPrimaryGray">#4e4e4e</color>
    <color name="onSecondaryGray">#4e4e4e</color>
    <color name="onBackgroundGray">#b4b4b4</color>
    <color name="onSurfaceGray">#b4b4b4</color>
    <color name="onErrorGray">#4e4e4e</color>

    <!--limitZone colors in charts.-->
    <color name="limitZoneSevereWarning">#F38C8C</color>
    <color name="limitZoneWarning">#F9F986</color>
    <color name="limitZoneSafe">#80FF80</color>

    <!--buttonColors-->
    <color name="cancelButton">#2e2f30</color> <!-- slightly ligher variant of background -->
</resources>
